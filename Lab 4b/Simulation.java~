/**
 * This class conducts the simulation for lab 4b.
 * @author Ivan Evtimov
 */
public class Simulation{
  
  public static void main(String[] args){
    
    LineQueueArray queueA = new LineQueueArray(1000);
    LineQueueList queueB = new LineQueueList();
    LineQueueList queueC = new LineQueueList();
    
    int timeOfCreationB, timeOfCreationC;
    int timeAddedToA=0;
    
    Person maria, marta;
    
    for (int i = 0; i<1000; i++){
      Person joe = new Person();
      Person jack = new Person();
      
      timeOfCreationB = i;
      
      queueB.add(joe);
      
      maria=queueB.peek();
      
      if(timeOfCreationB == i - maria.getTimeToStay()){
        queueA.add(queueB.poll());
        timeAddedToA = i;
      }
      
      queueC.add(jack);
      
      marta=queueC.peek();
      
      timeOfCreationC = i;
      
      if(timeOfCreationC == i - marta.getTimeToStay()){
        queueA.add(queueC.poll());
        timeAddedToA = i;
      }
      
      
      if(timeAddedToA == i-2){
        queueA.remove();
      }
      
      
      
      
          
    }
  
  
  }


}